---
interface Props {
  title: string;
}
import HeaderNav from "./HeaderNav.astro";
const { title } = Astro.props;
import Footer from "./Footer.astro";
import "@fontsource-variable/onest";
import WelcomeSection from "../components/WelcomeSection.astro";
import OurServices from "../components/OurServies.astro";
import SellCard from "../components/SellCard.astro";
import CardsBlogs from "../components/CardsBlogs.astro";
import OurServies from "../components/OurServies.astro";
import SectionCar from "@components/SectionCar.astro";
import CardComentrary from "@components/CardComentrary.astro";
import Login from "@components/Login.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="relartive text-white dark:text-white">
    <div class="absolute top-0 -z-10 h-full w-full bg-white">
      <div
        class="absolute bottom-auto left-auto right-0 top-0 h-[500px] w-[500px] -translate-x-[30%] translate-y-[20%] rounded-full bg-[#90d2ec] opacity-50 blur-[80px]"
      >
      </div>
    </div>
    <header>
      <HeaderNav />
    </header>
    <main>
      <section>
        <WelcomeSection />
      </section>
      <section>
        <article>
          <SellCard />
        </article>
      </section>
      <section>
        <OurServies />
      </section>
      <section>
        <SectionCar />
      </section>
      <section>
        <CardComentrary />
      </section>
      <section>
        <CardsBlogs />
      </section>
    </main>
    <footer>
      <Footer class="py-8" />
    </footer>

    <style is:global>
      :root {
        color-scheme: light;
      }
      html {
        font-family: "Onest Variable", sans-serif;
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>

  }

  .fade-left {
    transform: translateX(-80px); /* Ajusta el valor según tu preferencia */
  }

  .fade-right {
    transform: translateX(80px); /* Ajusta el valor según tu preferencia */
  }
  .fade-up {
    transform: translateY(-80px);
  }

  .fade-down {
    transform: translateY(80px);
  }

  .fade.active {
    opacity: 1;
    transform: translateX(0);
  }

  .flip-left {
    perspective: 1000px;
    transform-style: preserve-3d;
    transition: transform 0.5s ease-in-out;
    transform-origin: left center;
  }

  .flip-left.active {
    transform: rotateY(0);
  }

  .flip-left .card {
    transform: rotateY(-180deg);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const fadeElements = document.querySelectorAll(".fade");

    function checkFadeElements() {
      fadeElements.forEach((fadeElement) => {
        const top = fadeElement.getBoundingClientRect().top;
        const windowHeight = window.innerHeight;

        if (top < windowHeight) {
          fadeElement.classList.add("active");
        }
      });
    }

    // Verifica al cargar la página
    checkFadeElements();

    // Verifica al hacer scroll
    document.addEventListener("scroll", checkFadeElements);
  });
</script>
